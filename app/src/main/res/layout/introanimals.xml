<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#A5DAED"

    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="9">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:paddingBottom="10px"
            >

            <pl.droidsonroids.gif.GifImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/polaradopt"
                android:id="@+id/introanimalsImg" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:paddingLeft="15px"
            android:paddingRight="15px"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="ADOPT"
                    android:textColor="#FFFFFF"
                    android:background="#1187BB"
                    android:id="@+id/GoToAnimalsAnimation" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1.7"

                    android:layout_height="0dp">
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/phonimalsstatus_01"

                        android:id="@+id/IntroanimalTxtView" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="0dp"
                    android:layout_weight="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:background="#FFFFFF"

                        android:singleLine="false"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="The loss of sea ice habitat from climate
change is the biggest threat to the sur-
vival of polar bears. Other key threats
include polar bear-human conflicts,
overharvesting and industrial impacts."
                        android:id="@+id/Introanimal_txt" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>